{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "vite/client",
      "./env"
    ],
    "skipLibCheck": true,
    // 不允许出现不明确类型的this
    "noImplicitThis": true,
    // 严格检查空值
    "strictNullChecks": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ],
  "exclude": ["node_modules"]
}
