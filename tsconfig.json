{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "vite/client",
      // "./env"
    ],
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    // 不允许出现不明确类型的this
    "noImplicitThis": true,
    // 严格检查空值
    "strictNullChecks": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
	  "jsx": "preserve",
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx" ,"src/**/*.vue", "src/mock/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
